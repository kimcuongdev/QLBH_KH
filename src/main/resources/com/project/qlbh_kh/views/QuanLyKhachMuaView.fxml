<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.qlbh_kh.controllers.QuanLyKhachMuaController">
   <children>
      <Label alignment="TOP_CENTER" text="Quản lý khách mua">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
      <HBox alignment="CENTER_LEFT" prefHeight="19.0" prefWidth="600.0">
         <children>
            <TextField fx:id="searchField" promptText="Tìm kiếm bằng tên khách hàng" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="18.0" />
               </font>
            </TextField>
         </children>
      </HBox>
      <HBox prefHeight="86.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
         <children>
            <TableView fx:id="tableView" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="customerOutNameColumn" prefWidth="116.0" text="Tên khách hàng" />
                <TableColumn fx:id="addressColumn" prefWidth="90.0" text="Địa chỉ" />
                  <TableColumn fx:id="phoneNumberColumn" prefWidth="75.0" text="Số điện thoại" />
                  <TableColumn fx:id="emailColumn" prefWidth="75.0" text="Email" />
                  <TableColumn fx:id="paidPaymentColumn" prefWidth="75.0" text="Tổng tiền đã thanh toán" />
                  <TableColumn fx:id="unpaidPaymentColumn" prefWidth="75.0" text="Tổng tiền chưa thanh toán" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <VBox alignment="TOP_CENTER" prefHeight="118.0" prefWidth="189.0">
               <children>
                  <Button fx:id="addNewCustomerOutButton" graphicTextGap="0.0" mnemonicParsing="false" onAction="#addNewCustomerOut" prefHeight="39.0" prefWidth="193.0" text="Thêm khách hàng">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
                  <Button fx:id="reloadTableButton" mnemonicParsing="false" onAction="#openCustomerOutList" prefHeight="39.0" prefWidth="192.0" text="Tải lại bảng">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
